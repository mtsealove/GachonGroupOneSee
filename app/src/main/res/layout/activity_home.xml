<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <Button
            android:id="@+id/infoBtn"
            android:layout_margin="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_preference"/>
    </RelativeLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_1"
                android:paddingVertical="20dp"
                android:paddingHorizontal="5dp"
                android:text="@string/group_list"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_btn"
                android:paddingVertical="20dp"
                android:paddingHorizontal="5dp"
                android:text="@string/pr_list"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_btn"
                android:paddingVertical="20dp"
                android:paddingHorizontal="5dp"
                android:text="@string/federation_notice"
                android:textSize="17sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tab_btn"
                android:paddingVertical="20dp"
                android:paddingHorizontal="5dp"
                android:text="@string/QnA"
                android:textSize="17sp" />
        </LinearLayout>

    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/academicBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_list"
                android:paddingVertical="10dp"
                android:text="@string/acadmeic"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/musicBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_list"
                android:paddingVertical="10dp"
                android:text="@string/music"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/religionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_list"
                android:paddingVertical="10dp"
                android:text="@string/religion"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/athleticBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_list"
                android:paddingVertical="10dp"
                android:text="@string/athletic"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/performanceBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_list"
                android:paddingVertical="10dp"
                android:text="@string/performance"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/social_scienceBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_list"
                android:paddingVertical="10dp"
                android:text="@string/social_science"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/exhibitionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_list"
                android:paddingVertical="10dp"
                android:text="@string/exhibition"
                android:textSize="22sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>