<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Group.IntroduceActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/groupIntroduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/group_pr"
            android:textColor="#000000"
            android:textSize="22sp" />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/back"
            android:onClick="close"/>

        <View
            android:layout_below="@id/groupIntroduce"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000" />
    </RelativeLayout>

    <ImageView
        android:clickable="true"
        android:id="@+id/GroupIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/group_alt" />

    <EditText
        android:id="@+id/locationET"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:hint="동아리방 입력"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:background="@drawable/input_background"
        android:padding="5dp"
        android:textSize="18sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/introduceET"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/functionBtn"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/input_background"
            android:gravity="top"
            android:hint="동아리를 소개해주세요!"
            android:lineSpacingMultiplier="1.5"
            android:padding="10dp"
            android:textColorHint="#000000"
            android:textSize="17sp" />
        <Button
            android:id="@+id/functionBtn"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:paddingHorizontal="20dp"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/btn_color"
            android:text="@string/enrollment"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>
    </RelativeLayout>


</LinearLayout>